{
	"type": "module",
	"name": "misskey-reversi",
	"version": "0.0.1",
	"main": "./built/index.js",
	"types": "./built/index.d.ts",
	"exports": {
		".": {
			"import": "./built/index.js",
			"types": "./built/index.d.ts",
			"default": "./built/index.js"
		},
		"./*": {
			"import": "./built/*",
			"types": "./built/*",
			"default": "./built/*"
		}
	},
	"scripts": {
