		"eslint": "eslint './**/*.{js,jsx,ts,tsx}'",
		"typecheck": "tsc --noEmit",
		"lint": "pnpm typecheck && pnpm eslint"
	},
	"devDependencies": {
		"@types/node": "24.10.1",
		"@typescript-eslint/eslint-plugin": "8.47.0",
		"@typescript-eslint/parser": "8.47.0",
		"esbuild": "0.27.0",
		"execa": "9.6.0",
		"glob": "11.1.0",
		"nodemon": "3.1.11",
		"typescript": "5.9.3"
	},
	"files": [
		"built"
	],
	"dependencies": {
		"crc-32": "1.2.2"
	}
